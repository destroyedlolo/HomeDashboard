-- Title, var, unit
	template0 = [[
${color grey}\1 : ${color}${lua_parse displayvarU \2 \3}]],

-- Internet
-- Title, Down, Up, Unit
	template1 = [[
${color grey}\1 : ${color}${lua_parse displayvarU \2 \4} / ${color}${lua_parse displayvar \3 \4}]],

-- Raw value
-- Title, var
	template2 = [[
${color grey}\1 : ${color}${lua_parse displayvar \2}]],

-- Congelo
